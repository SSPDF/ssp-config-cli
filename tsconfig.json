{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, // Importante para importar .json diretamente
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"] // Exemplo de paths para tipos ou m√≥dulos
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}